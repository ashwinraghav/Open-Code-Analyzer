  <div id="explanation">
    <h3>Check out what some others might do with this fella</h3>
    <%= @reviewers.blank? ? "Currently no users have used the app" : "" %>
    <% @reviewers.each do |u| %>
        <li><%= link_to u.user, show_review_url(:id => params[:id], :user => u.user)%></li>
